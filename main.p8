function _init()
	framekey=0
	
	game = {
		mode=1,
		cam_x=0,
		cam_y=0,
	}
	
	player = {
		is_moving=false,
		spr_base=0,
		spr_idx=0,
		anim_idx=0,
		x=64,
		y=64,
		f=false,
		input=false
	}
	
end

--animation fps keys and calls
function framing()
	--6fps
	if framekey%5==0 then
		animateplayer()
	--10fps
	elseif framekey%3 then
	--15fps
	elseif framekey%2 then
	end
	
	if framekey>=99 then
		framekey=0
	else
		framekey+=1
	end
end

--player animation like idle
function animateplayer()
	local move={0,2,0,3}
	local idle={0,0,0,1,1,1}
	--player is moving
	if player.is_moving then
		if player.anim_idx >= count(move) then
			player.anim_idx=1
		else
			player.anim_idx+=1
		end
		player.spr_idx=move[player.anim_idx]
	else
	--player is idle
		if player.anim_idx >= count(idle) then
			player.anim_idx=1
		else
			player.anim_idx+=1
		end
		player.spr_idx=idle[player.anim_idx]
	end
end

--moving the player
function playermove()
	local mcmoving=false
	if btn(⬆️) then
		game.cam_y-=1
		player.spr_base=4
		player.y-=1
		mcmoving=true
	end
	if btn(⬇️) then
		game.cam_y+=1
		player.spr_base=8
	 player.y+=1
	 mcmoving=true
	end
	if btn(➡️) then
		game.cam_x+=1
		player.spr_base=0
		player.x+=1
		mcmoving=true
		f=true
	end
	if btn(⬅️) then
		game.cam_x-=1
		player.spr_base=0
		player.x-=1
		mcmoving=true
		f=false
	end
	
	player.is_moving=mcmoving
end

function playerinput()
	if btn() then
		player.input=true
	end
end

function _update()
	playermove()
	framing()
end

function _draw()
	cls()
	
	drawers={
		draw_home,
		draw_world,
	}
	
	if game.mode==1 then
		camera(game.cam_x,game.cam_y)
		map(0,0,12,8,8,8)
		print(framekey,2,2,8)
		print(player.is_moving,2,8,4)
		--draw the main character
		spr(player.spr_base+player.spr_idx,
			player.x,player.y,1,1,f)
	elseif game.mode==0 then
		print("press any key to start the game!")
	end
end
